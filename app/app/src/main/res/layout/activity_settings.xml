<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <!-- TODO: Layout is messed up on this one for some reason -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Settings"
            android:textSize="26sp" />

        <Button
            android:id="@+id/changePinSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change PIN" />

        <Button
            android:id="@+id/nuclearPinSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Nuclear PIN" />

        <Button
            android:id="@+id/darkModeSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Dark Mode" />

        <Button
            android:id="@+id/logoutSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelSettingsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/close" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>