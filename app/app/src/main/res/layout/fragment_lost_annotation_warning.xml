<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/popup_height"
    android:layout_gravity="center"
    >

    <!-- Popup background overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_height"
        android:background="#80000000"/>

    <!-- Popup content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- Text blurb -->
        <TextView
            android:id="@+id/cancelTextBlurb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This annotation will be discarded. Proceed?"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:gravity="center"/>

        <!-- Button container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/cancelAnnotationFragBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/continueAnnotationFragBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_s" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>